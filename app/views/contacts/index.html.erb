<p id="notice"><%= notice %></p>

<h2><%= link_to 'Create Contact', new_contact_path %></h2>
<%= form_tag contacts_path, role: 'search', method: :get do |f| %>
  <%= text_field_tag :query, params[:query] %>
  <%= button_tag "Search", name: nil %>
<% end %>


<br>
<br>

<h1>Searched Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.city %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



